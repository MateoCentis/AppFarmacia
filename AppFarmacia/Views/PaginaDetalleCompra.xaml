<?xml version="1.0" encoding="utf-8" ?>
<uranium:UraniumContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFarmacia.Views.PaginaDetalleCompra"
             xmlns:viewModels="clr-namespace:AppFarmacia.ViewModels"
             xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             xmlns:dg="clr-namespace:Maui.DataGrid;assembly=Maui.DataGrid"
             xmlns:converters="clr-namespace:AppFarmacia.Converters"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled">

    <uranium:UraniumContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
        </ResourceDictionary>
    </uranium:UraniumContentPage.Resources>

    <uranium:UraniumContentPage.BindingContext>
        <viewModels:PaginaDetalleCompraViewModel/>
    </uranium:UraniumContentPage.BindingContext>

    <!-- Agregar botón de realizar la compra y la tabla con los artículos (ver bien que poner)-->
    <Grid RowDefinitions="Auto,Auto,*">

        <!-- Información de la compra: Proveedor y Descripción -->
        <StackLayout Grid.Row="0" Orientation="Horizontal" Spacing="20" Margin="10,10,10,10" HorizontalOptions="Start">
            <Label Text="Proveedor:" FontAttributes="Bold" VerticalOptions="Center"/>
            <Label Text="{Binding Proveedor}" VerticalOptions="Center"/>
            <Label Text="Descripción:" FontAttributes="Bold" VerticalOptions="Center" Margin="20,0,0,0"/>
            <Label Text="{Binding Descripcion}" VerticalOptions="Center"/>
        </StackLayout>

        <!-- Botón para confirmar la compra -->
        <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="End" Margin="10,0,10,10">
            <Button Text="Confirmar Compra" 
                    Command="{Binding ConfirmarCompraCommand}"
                    StyleClass="FilledButton"
                    HeightRequest="50"
                    IsEnabled="{Binding CompraConfirmada, Converter={StaticResource InverseBoolConverter}}"
                    Margin="0,0,10,0"/>
            <Label Text="Compra Confirmada" 
                   FontAttributes="Bold" 
                   TextColor="Green"
                   VerticalOptions="Center"
                   IsVisible="{Binding CompraConfirmada}"/>
        </StackLayout>

        <dg:DataGrid Grid.Row="2" ItemsSource="{Binding ArticulosEnCompra}" 
              SelectionMode="Single" Style="{StaticResource TablaComun}">

            <dg:DataGrid.NoDataView>
                <Label Text="Esta compra no tiene detalles" Style="{StaticResource VistaSinData}"/>
            </dg:DataGrid.NoDataView>


            <dg:DataGrid.Columns>
                <dg:DataGridColumn Title="Id Artículo" PropertyName="IdArticulo" />
                <dg:DataGridColumn Title="Nombre" PropertyName="NombreArticulo"/>
                <dg:DataGridColumn Title="Cantidad encargada" PropertyName="Cantidad"/>
                <dg:DataGridColumn Title="Motivo" PropertyName="MotivoCompra"/>
                <dg:DataGridColumn Title="Stock actual" PropertyName="StockActual">
                    <dg:DataGridColumn.CellTemplate>
                        <DataTemplate>
                            <Label Text="{Binding .}" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   VerticalTextAlignment="Center" />
                        </DataTemplate>
                    </dg:DataGridColumn.CellTemplate>
                </dg:DataGridColumn>
            </dg:DataGrid.Columns>

        </dg:DataGrid>
    </Grid>
    
</uranium:UraniumContentPage>