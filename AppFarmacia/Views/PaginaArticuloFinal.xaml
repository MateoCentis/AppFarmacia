<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dg="clr-namespace:Maui.DataGrid;assembly=Maui.DataGrid"
             xmlns:viewModels="clr-namespace:AppFarmacia.ViewModels"
             x:Class="AppFarmacia.Views.PaginaArticuloFinal">

    <ContentPage.BindingContext>
        <viewModels:PaginaArticuloFinalViewModel/>
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*">
        <Label Text="{Binding NombreArticulo}" FontAttributes="Bold" 
               FontSize="Header" HorizontalOptions="CenterAndExpand" VerticalOptions="Center"/>

        <dg:DataGrid Grid.Row="1" ItemsSource="{Binding ListaArticulosFinales}" RowHeight="50" 
                     HeaderHeight="60"  BorderColor="#DBDBDB" HeaderBackground="#E7F1FF">

            <dg:DataGrid.NoDataView>
                <Label Text="No existen artículos cargados aún" HorizontalOptions="Center" VerticalOptions="Center"/>
            </dg:DataGrid.NoDataView>

            <dg:DataGrid.Columns>
                <dg:DataGridColumn Title="Id" PropertyName="IdArticuloFinal" />
                <dg:DataGridColumn Title="Vencimiento" PropertyName="Vencimiento"/>
            </dg:DataGrid.Columns>
            
        </dg:DataGrid>
    </Grid>
</ContentPage>