<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dg="clr-namespace:Maui.DataGrid;assembly=Maui.DataGrid"
             xmlns:viewModels="clr-namespace:AppFarmacia.ViewModels"
             x:Class="AppFarmacia.Views.PaginaArticulos">

    
    <ContentPage.BindingContext>
        <viewModels:PaginaArticulosViewModel/>
    </ContentPage.BindingContext>
    

    <Grid RowDefinitions="Auto,*, Auto">
        <HorizontalStackLayout HorizontalOptions="Center" Margin="0,5,0,5">
            <SearchBar Text="{Binding TextoBusqueda}" Placeholder="Buscar artículo..." Margin="0,0,0,5" HorizontalOptions="CenterAndExpand"
                       WidthRequest="400" HeightRequest="40" SearchButtonPressed="OnSearchButtonPressed" VerticalOptions="Center"/>
            <Picker Title="Selecciona una opción" ItemsSource="{Binding ListCategorias}" SelectedItem="{Binding CategoriaSeleccionada}" WidthRequest="210" Margin="40,0,5,5" />
            <Button Text="Filtrar" Command="{Binding FiltrarCommand}" WidthRequest="100" Margin="5,0,0,5"/>
            <Button Text="Ver Artículo" Command="{Binding VerArticuloCommand}" VerticalOptions="Center" Margin="5,0,0,5"/>
        </HorizontalStackLayout>

        <dg:DataGrid Grid.Row="1" ItemsSource="{Binding ListaArticulos}" 
                     SelectionMode="Single" SelectedItem="{Binding ArticuloSeleccionado}"
                     RowHeight="50" HeaderHeight="60"  BorderColor="#DBDBDB"
                     HeaderBackground="#E7F1FF">
            <!-- Para cuando la página no tiene data para ver-->
            <dg:DataGrid.NoDataView>
                <Label Text="No existen artículos cargados aún" HorizontalOptions="Center" VerticalOptions="Center"/>
            </dg:DataGrid.NoDataView>

            <!-- Acá dentro se definen las columnas de la tabla -->
            <!-- Ver bien el tema de configurar bien las columnas con DataTemplate -->
            <dg:DataGrid.Columns>
                <dg:DataGridColumn Title="Id" PropertyName="IdArticulo" />
                <dg:DataGridColumn Title="Nombre" PropertyName="Nombre"/>
                <dg:DataGridColumn Title="Marca" PropertyName="Marca"/>
                <dg:DataGridColumn Title="Categoría" PropertyName="Categoria"/>
                <dg:DataGridColumn Title="Precio" PropertyName="PrecioActual"/>
                <dg:DataGridColumn Title="Descripción" PropertyName="Descripcion"/>
            </dg:DataGrid.Columns>

            <!-- Configuración de colores para las filas, segun cuantos se ponen alternan-->
            <dg:DataGrid.RowsBackgroundColorPalette>
                <dg:PaletteCollection>
                    <Color>#F2F2F2</Color>
                    <Color>#FFFFFF</Color>
                </dg:PaletteCollection>
            </dg:DataGrid.RowsBackgroundColorPalette>

            <!-- Esto sirve para darle a determinadas celdas colores especiales bajo ciertas condiciones-->
            <dg:DataGrid.Resources>
                <ResourceDictionary>
                    <!--<conv:StreakToColorConverter x:Key="StreakToColorConverter"/>-->
                </ResourceDictionary>
            </dg:DataGrid.Resources>
        </dg:DataGrid>
    </Grid>
</ContentPage>