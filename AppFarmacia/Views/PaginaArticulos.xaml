<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFarmacia.Views.PaginaArticulos"
             xmlns:model="clr-namespace:AppFarmacia.Models"
             Title="PaginaArticulos"
             xmlns:viewModels ="clr-namespace:AppFarmacia.ViewModels"
             x:DataType="viewModels:PaginaArticulosViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Text="Row 0, Column 0"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               Grid.Column="0"
               Grid.Row="0"/>

        <CollectionView ItemsSource="{Binding ListaArticulos}"
                  Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Articulo">
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding Nombre}" 
                                   FontSize="20" 
                                   TextColor="white"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>